<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


         <ImageView
             android:id="@+id/imageView_profilePic_recyl"
             android:layout_width="0dp"
             android:layout_height="80dp"
             android:layout_marginStart="16dp"
             android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"
             android:scaleType="centerCrop"
             android:src="@drawable/ic_person_black_24dp"
             app:layout_constraintDimensionRatio="w,1:1"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

          <!--  <ImageView
            android:id="@+id/imageView_profilePic_recyl"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/scrim_gradient_1"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/app_name" /> -->


        <TextView
            android:id="@+id/textView_name_recyl"
            style="@style/Base.TextAppearance.AppCompat.Display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="20dp"
            android:textColor="#000"
            android:fontFamily="@font/sniglet_regular"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_profilePic_recyl"
            app:layout_constraintStart_toEndOf="@+id/imageView_profilePic_recyl"
            app:layout_constraintTop_toTopOf="@+id/imageView_profilePic_recyl"
            android:hint="Tanveer Ahmad H" />

        <TextView
            android:id="@+id/textView_posi_recyl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/sniglet_regular"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView_name_recyl"
            app:layout_constraintTop_toBottomOf="@id/textView_name_recyl"
            android:hint="APP DEVELOPER" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
